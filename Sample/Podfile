source 'https://github.com/CocoaPods/Specs.git'

target 'YouTubeLiveVideo' do
    
    platform :ios, '11.2'
    use_frameworks!
    
    pod 'GoogleSignIn'
    # Use the framework from repo:
#    pod 'YTLiveStreaming'
    # But You can use the local copy just for development:
    pod 'YTLiveStreaming', :path => '../.'

    pod "XCDYouTubeKit", "~> 2.5"
    
    pod 'RxSwift'
    pod 'RxCocoa'
    pod 'RxDataSources'
    pod 'LFLiveKit'
    pod "PromiseKit/CorePromise", "~> 6.8"

    target 'YouTubeLiveVideoTests' do
      pod 'RxTest'
      pod 'RxBlocking'
    end
end
